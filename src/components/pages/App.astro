---
import Layout from "@/layouts/Layout.astro";
import { Textbox } from "../Textbox";
import { getI18N } from "@/i18n";
import "@/styles/app.css";
import { Menu } from "../Menu";
import SceneTransition from "../SceneTransition.astro";
import { LanguagePickerModal, LanguagePickerText } from "../LanguagePicker";
const i18n = getI18N({currentLocale: Astro.currentLocale || 'en'})
---

<Layout title={i18n.SEO_TITLE}>
	<main id="app">
		<SceneTransition htmlContent={`${i18n.INTRO_TITLE}`}/>

		<div id="ui">
			<div class="note-container">
				<div class="title-container">
					<p>Rosa Morales</p>
					<LanguagePickerText locale={Astro.currentLocale}/>
				</div>
					
				<Menu locale={Astro.currentLocale} client:load/>	
			</div>
			<Textbox />
		</div>
		
		<LanguagePickerModal locale={Astro.currentLocale} client:load/>	
			
		<canvas id="game"></canvas>
	</main>
</Layout>

<script src="../../../scripts/canvas"></script>