---
import Layout from "@/layouts/Layout.astro";
import { Textbox } from "../Textbox";
import { getI18N } from "@/i18n";
import "@/styles/app.css";
import Instructions from "../Instructions";
import { Menu } from "../Menu";
import SceneTransition from "../SceneTransition.astro";

const i18n = getI18N({currentLocale: Astro.props.lang})

const message=`<div><p>${i18n.INTRO_TITLE}</p><p>${i18n.MY_NAME}</p></div>`
---

<Layout title={i18n.SEO_TITLE}>
	<main id="app">
		<SceneTransition htmlContent={message}/>

		<div id="ui">
			<div class="note">
				<p>Rosa Morales</p>
				<Menu client:load/>	
			</div>
			<Textbox />
		</div>
		
		<Instructions client:load/>	
			
		<canvas id="game"></canvas>
	</main>
</Layout>

<script src="../../../scripts/canvas"></script>./Instructions